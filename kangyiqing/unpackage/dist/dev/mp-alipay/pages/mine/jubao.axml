<view class="content"><form data-event-opts="{{[['submit',[['sub',['$event']]]]]}}" onSubmit="__e"><view class="list"><view class="list-title">举报信息</view><view class="list-item"><text>举报内容：</text><view class="_br"></view></view><view class="list-item"><textarea value="{{content}}" placeholder="请输入内容" data-event-opts="{{[['input',[['__set_model',['','content','$event',[]]]]]]}}" onInput="__e"></textarea></view><view class="list-item"><text>记录时间：</text><picker mode="date" data-event-opts="{{[['change',[['bodyStatusDateChange',['$event']]]]]}}" onChange="__e"><button size="mini">{{bodyStatusDate||'请选择日期'}}</button></picker><picker mode="time" data-event-opts="{{[['change',[['bodyStatusTimeChange',['$event']]]]]}}" onChange="__e"><button size="mini">{{bodyStatusTime||'请选择时间'}}</button></picker></view></view><view class="list"><button form-type="submit">提交信息</button></view></form></view>